<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/back_menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="7"
        android:padding="20dp">

        <TextView
            android:layout_weight="5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Menu"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:gravity="start"
            android:textStyle="italic"/>
        <ImageView
            android:layout_weight="1"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:src="@drawable/png_bmw"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@drawable/back_menu2">

        <androidx.cardview.widget.CardView
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="25dp"
            app:cardElevation="5dp"
            android:padding="5dp"
            app:cardCornerRadius="18dp"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="search"
                    android:textColorHint="#AEAEAE"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/transparent"
                    android:gravity="start"
                    android:maxLength="21"
                    android:textSize="21sp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_search"
                    android:padding="6dp"
                    android:layout_weight="7"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/i8"
            android:layout_marginTop="35dp"
            android:layout_marginStart="30dp"
            app:cardElevation="15dp"
            android:padding="5dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <LinearLayout
                android:background="@drawable/back_menu"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_gravity="top">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="      BMW i8\n2014-2020"
                    android:textSize="21sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    />

            </LinearLayout>
            <ImageView
                android:layout_gravity="end"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_weight="1.1"
                android:src="@drawable/png_bmw1"/>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/m3"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="30dp"
            app:cardElevation="15dp"
            android:padding="5dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <LinearLayout
                android:background="@drawable/back_menu"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="end
">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="  BMW M3\n  2013-2019"
                    android:textSize="21sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    />

            </LinearLayout>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/png_bmw2"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/m2"
            android:layout_marginTop="35dp"
            android:layout_marginStart="30dp"
            app:cardElevation="15dp"
            android:padding="5dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <LinearLayout
                android:background="@drawable/back_menu"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_gravity="top">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="2016 BMW M2"
                    android:textSize="21sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    />

            </LinearLayout>
            <ImageView
                android:layout_gravity="end"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:layout_weight="1.1"
                android:src="@drawable/png_bmw4"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/c7"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="30dp"
            app:cardElevation="10dp"
            android:padding="5dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <LinearLayout
                android:background="@drawable/back_menu"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:gravity="end
">

                <TextView
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="BMW 7 ceries"
                    android:textSize="21sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    />

            </LinearLayout>
            <ImageView
                android:layout_marginTop="5dp"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/png_bmw5"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="15dp"
            app:cardElevation="15dp"
            app:cardCornerRadius="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_weight="1"
                android:src="@drawable/ic_call"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</LinearLayout>